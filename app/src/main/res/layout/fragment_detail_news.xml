<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="10dp"
    tools:context=".view.DetailNewsFragment">

    <!-- TODO: Update blank fragment layout -->
    <TextView
        android:id="@+id/DetailNews"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerInParent="true"
        android:layout_marginTop="35dp"
        android:text="Detail News"
        android:textSize="45sp" />

    <ImageView
        android:id="@+id/ImageBerita"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:layout_below="@id/DetailNews"
        android:layout_alignParentTop="true"
        android:layout_centerInParent="true"
        android:layout_marginTop="150dp"
        android:src="@drawable/ic_launcher_background"
        tools:ignore="ContentDescription" />

    <TextView
        android:id="@+id/JudulBerita"
        android:textStyle="bold"
        android:text="judul berita"
        android:layout_centerInParent="true"
        android:layout_below="@id/ImageBerita"
        android:layout_marginTop="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/tanggalberita"
        android:text="Tanggal Berita"
        android:layout_below="@id/JudulBerita"
        android:layout_marginTop="10dp"
        android:layout_centerInParent="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/contentberita"
        android:text="Content"
        android:layout_below="@id/tanggalberita"
        android:layout_marginTop="10dp"
        android:layout_centerInParent="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <ImageView
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_below="@id/contentberita"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="247dp"
        android:layout_alignParentRight="true"
        android:src="@drawable/baseline_favorite_24"
        tools:ignore="ContentDescription" />


</RelativeLayout>